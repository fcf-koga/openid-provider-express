									"if (redirectUrl) {",
									"    // URL„ÅÆ„ÇØ„Ç®„É™„Éë„É©„É°„Éº„ÇøÈÉ®ÂàÜ„ÇíÂèñÂæó",
									"    const queryParams = redirectUrl.split('?')[1];",
									"    ",
									"    if (queryParams) {",
									"        // „ÇØ„Ç®„É™„Éë„É©„É°„Éº„Çø„ÇíËß£Êûê",
									"        const params = queryParams.split('&');",
									"        let code = null;",
									"        ",
									"        params.forEach(param => {",
									"            const [key, value] = param.split('=');",
									"            if (key === 'code') {",
									"                code = value;",
									"            }",
									"        });",
									"        ",
									"        if (code) {",
									"            // „Ç≥„É¨„ÇØ„Ç∑„Éß„É≥Â§âÊï∞„Å´ 'code' „ÅÆÂÄ§„ÇíË®≠ÂÆö",
									"            pm.collectionVariables.set(\"code\", code);",
									"            console.log(\"Code:\", code);",
									"        } else {",
									"            console.error(\"Code parameter not found in the URL\");",
									"        }",
									"    } else {",
									"        console.error(\"No query parameters found in the URL\");",
									"    }",
									"} else {",
									"    console.error(\"Redirect URL not found in response headers\");",
									"}"
